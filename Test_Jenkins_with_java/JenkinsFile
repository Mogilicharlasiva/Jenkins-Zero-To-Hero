pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Compile the Java application
                sh '''sudo apt update
                    sudo apt install openjdk-17-jdk

                    '''
            }
        }
        stage('Run') {
            steps {
                // Run the Java application
                sh '''javac HelloWorld.java
                    java HelloWorld'''
            }
        }
    }
}


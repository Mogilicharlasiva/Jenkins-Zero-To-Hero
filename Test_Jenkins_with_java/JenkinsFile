pipeline {
    agent {
	docker{
		image 'openjdk:17'}
	}

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git credentialsId: 'MogilicharlaSivaGitId', url: 'https://github.com/Mogilicharlasiva/Jenkins-Zero-To-Hero.git'
            }
        }
	stage('Build') {
            steps {
                // Compile the Java application
		sh '''javac HelloWorld.java'''
            }
        }
        stage('Run') {
            steps {
                // Run the Java application
                sh '''java HelloWorld'''
            }
        }
    }
}


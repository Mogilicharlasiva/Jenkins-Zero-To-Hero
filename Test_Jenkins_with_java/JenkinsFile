pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from GitHub
                git 'https://github.com/Mogilicharlasiva/Jenkins-Zero-To-Hero.git'
            }
        }
	stage('Build') {
	    agent{
		docker { image 'openjdk:17'}
		}
            steps {
                // Compile the Java application
		sh '''javac HelloWorld.java'''
            }
        }
        stage('Run') {
            steps {
                // Run the Java application
                sh '''java HelloWorld'''
            }
        }
    }
}

